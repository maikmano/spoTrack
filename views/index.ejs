<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.2/css/all.min.css" integrity="sha384-1tuV8Wb+PGvZV7NCqIgKy0dggW0HrGvV5k30R+g5IL9Y6mOXE6Jh1AtgRb6kwwW2" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css"  href="../style.css">
  <link rel="stylesheet" type="text/css" href="../main.css">
  
  <title>My Top Spotify Songs</title>



</head>
<body>
  <nav>
    <div class="container">
      <div class="logo">
        <i class="fab fa-spotify"></i>
        <h1>My Top Spotify Songs</h1>
      </div>
      <div class="links">
        <a href="/">Home</a>
        <a href="/login">Login</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </nav>


<main>
  
  <h1 class="title-month">AS 10 MAIS OUVIDAS NO MÃŠS </h1>

  <div class="card-container">
    <% topSongsShort.forEach(function(song) { %>
    <div class="card">
      <div class="card-image">
        <img src="<%= song.imageUrl %>" alt="<%= song.name %>">
      </div>
      <div class="card-content">
        <h2 class="song-name"><%= song.name %></h2>
        <p class="song-artist"><%= song.artist %></p>
      </div>
    </div>
    <% }); %>

    <h1 class="title">AS 10 MAIS OUVIDAS EM 6 MESES</h1>



    <div class="card-container">

    <% topSongsMedium.forEach(function(song) { %>
    <div class="card">
      <div class="card-image">
        <img src="<%= song.imageUrl %>" alt="<%= song.name %>">
      </div>
      <div class="card-content">
        <h2><%= song.name %></h2>
        <p><%= song.artist %></p>
      </div>
    </div>
    <% }); %>
  </div>

</main>

<footer>
  <div class="container">
    <p>&copy; 2023 My Top Spotify Songs</p>
  </div>
</footer>
</body>
</html>
